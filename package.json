{
  "name": "ai-hr-bot",
  "version": "1.0.0",
  "description": "AI-powered HR recruitment platform with Telegram bot, admin panel, and PostgreSQL integration",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "build:ui": "cd admin-panel && npm run build",
    "lint:ui": "cd admin-panel && npm run lint",
    "format:ui": "cd admin-panel && npm run format",
    "watch:bot": "nodemon --exec tsx src/app.ts",
    "watch:server": "nodemon --exec tsx src/server.ts",
    "watch:ui": "cd admin-panel && npm run dev"
  },
  "keywords": [
    "telegram",
    "bot",
    "hr",
    "assistant",
    "ollama",
    "ai",
    "interview",
    "resume"
  ],
  "author": {
    "name": "Alexander Gerasimov",
    "url": "https://agrsmv.ru"
  },
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/pg": "^8.15.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "i18next": "^25.5.2",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.3",
    "preact": "^10.19.3",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.2",
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
