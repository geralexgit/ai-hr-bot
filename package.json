{
  "name": "telegram-hr-bot",
  "version": "1.0.0",
  "description": "HR Assistant Telegram Bot with Ollama integration for resume analysis and interviews",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "watch": "nodemon --exec tsx src/app.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "dev:ui": "cd admin-panel && npm run dev",
    "build:ui": "cd admin-panel && npm run build",
    "lint:ui": "cd admin-panel && npm run lint",
    "format:ui": "cd admin-panel && npm run format"
  },
  "keywords": [
    "telegram",
    "bot",
    "hr",
    "assistant",
    "ollama",
    "ai",
    "interview",
    "resume"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.3",
    "preact": "^10.19.3",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "@preact/preset-vite": "^2.8.2",
    "@types/react": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.11",
    "eslint-plugin-react": "^7.33.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
