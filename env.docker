# Docker Environment Configuration
# This file contains default values for Docker Compose
# You can override these by creating a .env file in the project root

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# REQUIRED: Set your Telegram bot token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=hr_bot
DB_USER=hr_user
DB_PASSWORD=hr_password
DB_PORT=5432

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
API_PORT=3000
FRONTEND_PORT=80

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your custom domain or IP address (change this to your actual domain/IP)
APP_DOMAIN=localhost
APP_PROTOCOL=http

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
# For Docker Desktop (Windows/Mac)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=gemma3n:latest

# For Linux Docker or if running Ollama in Docker
# OLLAMA_BASE_URL=http://ollama:11434

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# This will be automatically configured based on APP_DOMAIN and APP_PROTOCOL
CORS_ORIGIN_PROD=http://localhost
# Set to 'true' to allow external API calls from any origin (less secure)
CORS_ALLOW_EXTERNAL_API=false
